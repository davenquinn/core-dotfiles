#!/bin/bash

root=$(git rev-parse --show-toplevel)

dn="$root/dotfiles"

cd "$dn"
for f in $(ls .); do
  fp="$dn/$f"
  out="$HOME/.$f"
  if [ -L "$out" ]; then
    # Remove existing symlinks
    rm -f "$out"
  fi

  if [ -e "$out" ]; then
    echo "$out exists and is not a symlink: refusing to overwrite"
  else
    echo "$fp -> $out"
    ln -sf "$fp" "$out"
  fi
done

# Install starship shell prompt
sh -c "$(curl -fsSL https://starship.rs/install.sh)"
